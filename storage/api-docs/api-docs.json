                    "account_number": {
                        "type": "string",
                        "example": "FR7630001007941234567890185"
                    }
                },
                "type": "object"
            },
            "StoreClientRequest": {
                "title": "Store Client Request",
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john.doe@example.com"
                    },
                    "phone": {
                        "type": "string",
                        "example": "+33123456789"
                    },
                    "address": {
                        "type": "string",
                        "example": "123 Main St, Paris, France"
                    }
                },
                "type": "object"
            },
            "UpdateBankAccountRequest": {
                "title": "Update Bank Account Request",
